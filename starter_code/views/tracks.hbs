<div class="page-tracks">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Listen</th>
      </tr>
    </thead>
    <tbody>
      {{#each tracks}}
        <tr>
          <td>{{name}}</td>
          <td>
            <audio src="{{preview_url}}" controls></audio>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>